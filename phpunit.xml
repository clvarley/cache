<?xml version="1.0"?>
<phpunit
    bootstrap="vendor/autoload.php"
    colors="true"
    cacheResult="false"
    testdox="true"
    noInteraction="true">
    <testsuites>
        <testsuite name="unit">
            <directory suffix=".php">tests</directory>
        </testsuite>
    </testsuites>
    <coverage cacheDirectory="reports">
        <include>
            <directory suffix=".php">src</directory>
        </include>
        <report>
            <clover outputFile="reports/coverage.xml"/>
        </report>
    </coverage>
</phpunit>
